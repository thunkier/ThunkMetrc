[package]
name = "thunkmetrc-{{ if .IsWrapper }}wrapper{{ else }}client{{ end }}"
version = "{{ .Version }}"
edition = "2021"
description = "{{ .Description }}"
license = "MIT"
repository = "https://github.com/thunkier/thunkmetrc"
keywords = ["thunkmetrc", "cannabis", "compliance", "api", "sdk"]
categories = ["api-bindings", "web-programming::http-client"]

[dependencies]
{{- if .IsWrapper }}
thunkmetrc-client = { path = "../client", version = "{{ .Version }}" }
serde = { version = "{{ or (index .Deps "rust.serde") "1.0" }}", features = ["derive"] }
serde_json = "{{ or (index .Deps "rust.serde_json") "1.0" }}"
tokio = { version = "{{ or (index .Deps "rust.tokio") "1.0" }}", features = ["full"] }
async-stream = "{{ or (index .Deps "rust.wrapper.async_stream") "0.3" }}"
futures = "{{ or (index .Deps "rust.wrapper.futures") "0.3" }}"
futures-core = "{{ or (index .Deps "rust.wrapper.futures_core") "0.3" }}"
reqwest = { version = "{{ or (index .Deps "rust.wrapper.reqwest") "0.11" }}", default-features = false, features = ["json", "rustls-tls"] }
{{- else }}
log = "{{ or (index .Deps "rust.client.log") "0.4" }}"
reqwest = { version = "{{ or (index .Deps "rust.client.reqwest") "0.11" }}", features = ["json", "blocking"] }
serde = { version = "{{ or (index .Deps "rust.serde") "1.0" }}", features = ["derive"] }
serde_json = "{{ or (index .Deps "rust.serde_json") "1.0" }}"
tokio = { version = "{{ or (index .Deps "rust.tokio") "1.0" }}", features = ["full"] }
urlencoding = "{{ or (index .Deps "rust.client.urlencoding") "2" }}"
{{- end }}
{{- range $k, $v := .Deps }}
{{- if not (Contains $k ".") }}
{{ $k }} = "{{ $v }}"
{{- end }}
{{- end }}
